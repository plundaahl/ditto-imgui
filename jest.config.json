{
  "projects": [
    {
      "displayName": "Unit Tests",
      "testMatch": ["<rootDir>/**/*.unit.ts"],
      "transform": { "^.+\\.tsx?$": "ts-jest" },
      "roots": [ "./src" ]
    },
    {
      "displayName": "Integration Tests",
      "testMatch": ["<rootDir>/**/*.integration.ts"],
      "transform": { "^.+\\.tsx?$": "ts-jest" },
      "preset": "jest-puppeteer",
      "roots": [ "./src" ]
    }
  ],
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.unit.ts",
    "!src/**/index.ts"
  ]
}
